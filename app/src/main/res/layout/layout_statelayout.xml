<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/stContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <ProgressBar
            android:id="@+id/stProgress"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <ImageView
            android:id="@+id/stImage"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <TextView
            android:id="@+id/stMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="网络异常" />

        <com.example.zqd.myproject.ui.component.StateButton
            android:id="@+id/stButton"
            style="@style/buttonStyle_red"
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:layout_marginTop="12dp"
            android:padding="0dp"
            android:text="@string/stfButtonText" />

    </LinearLayout>

</merge>